<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:orientation="vertical"
    android:background="@drawable/boxing_iphone_wallpaper">
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="-130dp"
        android:paddingLeft="90dp"
        android:textSize="35dp"
        android:text="BoxingBuddy"
        android:background="#E05B5B5B"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@android:color/holo_red_dark"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/_12x512bb" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ap_logo_letters_rgb__1_"
        android:background="@android:color/white"/>



    <Button
        android:id="@+id/button_register"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="300dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/mybuttons"
        android:text="Register" />

    <Button
        android:id="@+id/button_login"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/mybuttons"
        android:text="Login" />




</LinearLayout>