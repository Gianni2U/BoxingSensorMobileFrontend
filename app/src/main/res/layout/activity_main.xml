<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="25dp"
            android:text="What would you like to do?"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>
        <Button
            android:id="@+id/btnPower"
            android:layout_marginHorizontal="0dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            android:onClick="GoToPower"
            android:text="Start Power Training"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="5"
            android:textSize="20dp"
            android:background="@drawable/boxer_punching"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/btnSpeed"
            android:text="start  interval Training"
            android:width="100dp"
            android:onClick="GoToSpeed"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="5"
            android:background="@drawable/shutterstock_506724043"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/btnStatistics"
            android:layout_marginTop="0dp"
            android:text="view my stats"
            android:width="100dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/logout"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/mybuttons"
        android:textSize="30dp"
        android:text="LOG OUT"/>

</LinearLayout>